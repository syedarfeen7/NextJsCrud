{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: Debug API",
      "type": "node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/node_modules/.bin/next",
      "args": ["dev"],
      "autoAttachChildProcesses": true,
      "env": {
        "NODE_ENV": "development"
      }
    }
  ]
}
